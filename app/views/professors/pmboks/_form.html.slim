.row-wg.justify-content-center
	.col-md-8
		.card.border-primary
			.card-header.bg-primary
				h2.text-white = @pmbok.model_name.human
			.card-body
				= simple_form_for @pmbok do |f|
					- f.error_notification
					= f.input :name
					.form-group.row
						label.col-sm-3.col-form-label
							= ProcessGroup.model_name.human.pluralize(I18n.locale)
						.col-sm-9
							= f.simple_fields_for :process_groups do |process_group|
								= render 'process_group_fields', f: process_group
							.links
								= link_to_add_association f, :process_groups
									= icon 'new'
									span = ProcessGroup.model_name.human
					= f.button :submit
