.row-wg.justify-content-center
	.col-md-8
		.card.border-primary
			.card-header.bg-primary
				h2.text-white = @process_group.singularize
			.card-body
				= simple_form_for [@process_group.pmbok, @process_group] do |f|
					- f.error_notification
					= f.association :process_group_type
					.form-group.row
						label.col-sm-3.col-form-label
							= ProcessObject.pluralize
						.col-sm-9
							= f.simple_fields_for :process_objects do |process_object|
								= render 'process_object_fields', f: process_object
							.links
								= link_to_add_association f, :process_objects
									= icon 'new'
									span = ProcessObject.singularize
					= f.button :submit
